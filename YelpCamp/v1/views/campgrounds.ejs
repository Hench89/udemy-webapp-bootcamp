<%- include("partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpCamp!</h1>
            <p>View our hand-picked campground from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campground</a><br><br>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular CampGrounds!</h3><br>
        </div>
    </div>

    <div class="row">

        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <img class="img-thumbnail" src="<%= campground.image %>" width="400px" height="240px">
            <div class="caption">
                <h4><%= campground.name %></h4>
            </div>
        </div>
        <% }) %>

    </div>
    <a href="/campgrounds/new">Add new Campground</a><br><br>



</div>

<%- include("partials/footer") %>