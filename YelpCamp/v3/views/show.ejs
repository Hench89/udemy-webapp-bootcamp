<%- include("partials/header") %>
<div class="container">
    <div class="row">
        <h1><%= campground.name %></h1>

        <img src="<%= campground.image %>">
        
        <p><%= campground.description %></p>
        
        <% campground.comments.forEach(function(cmt){ %>
            <p>
                <strong><%= cmt.author %></strong> - <%= cmt.text %>
            </p>
        <% }) %>
    </div>
</div>

<%- include("partials/footer") %>